<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF3"
    tools:context=".MenuPilar">

    <Button
        android:id="@+id/button_volver_menupilar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="325dp"
        android:layout_height="530dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button_volver_menupilar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_agua_menupilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1E1D40"
            android:text="Agua" />

        <Button
            android:id="@+id/button_cocacola_menupilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1E1D40"
            android:text="Cocacola" />

        <Button
            android:id="@+id/button_hamburguesa_menupilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1B65AB"
            android:text="Hamburguesa" />

        <Button
            android:id="@+id/button_bocata_menupilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1B65AB"
            android:text="Bocata" />

        <Button
            android:id="@+id/button_helado_menupilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D90D32"
            android:text="Helado" />

        <Button
            android:id="@+id/button_flan_menupilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D90D32"
            android:text="Flan" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>