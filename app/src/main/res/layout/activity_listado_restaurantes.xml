<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF3"
    tools:context=".ListadoRestaurantes">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="615dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_seleccionar_listadorestaurantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona el restaurante"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_pilar_listadorestaurantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1E1D40"
            android:text="Restaurante Pilar" />

        <Button
            android:id="@+id/button_kiko_listadorestaurantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D90D32"
            android:text="Bar Kiko" />

        <Button
            android:id="@+id/button_lola_listadorestaurantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1E1D40"
            android:text="Burguer Lola" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>